<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./css/styles.css" rel="stylesheet">

    <title><%= title %></title>

    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-gray-100 font-[Comic_Sans_MS] text-[1.2rem] px-24 py-16 min-h-screen leading-relaxed">
    
    <div class="text-base text-gray-600 mb-4">
      <a href="/" class="text-blue-600 underline hover:text-blue-800">Home</a> &gt; <%= course.title %>
    </div>

    <div class="flex justify-between items-center mb-6">
      <h1 class="text-4xl font-bold border-b-4 border-black inline-block pb-2"><%= course.title %></h1>
      <% if(role === 'Instructor') { %>
        <div class="space-x-6 text-blue-600 font-semibold text-lg">
          <a href="/courses/1/edit" class="hover:underline">Edit</a>
          <a href="/courses/1/delete" class="hover:underline">Delete</a>
        </div>
      <% } else if(!isEnrolled) { %>
        <div class="w-1/3 border rounded p-6 shadow-lg">
          <h2 class="text-2xl font-bold mb-2">JavaScript</h2>
          <p class="text-gray-700 mb-4">John Doe</p>
          <div class="flex items-center text-gray-600 mb-4">
            â³ <span class="ml-2">300</span>
          </div>
          <button class="bg-green-600 hover:bg-green-700 text-white px-6 py-2 rounded w-full font-semibold">
            Enroll
          </button>
        </div>
      <% } %>
    </div>

    <div>
      <h2 class="italic underline text-2xl font-semibold mb-3">Chapters</h2>

      <% if (chapters.length === 0) { %>
        <p class="text-gray-700 mb-6">There are no chapters available. Create one?</p>
      <% } else { %>
        <div class="space-y-3">
          <% chapters.forEach((chapter, index) => { %>
            <div class="flex justify-between items-center border px-4 py-2 rounded shadow w-90 ">
              <span><%= chapter.title %></span>
              <span>ğŸ”’</span>
            </div>
          <% }) %>
        </div>
      <% } %>

      <button class="px-6 py-3 bg-purple-600 text-white font-bold text-lg rounded mt-6">
        Create a new chapter
      </button>
    </div>

  </body>
</html>