<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" >
    <meta name="courseId" content="<%= course.id %>" >
    <link href="/css/styles.css" rel="stylesheet">

    <title><%= title %></title>

    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <script>
      const token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
      const courseId = document.querySelector('meta[name="courseId"]').getAttribute("content");

      function deleteChapter(id){
        fetch(`/chapters/${id}/pages`,{
          method: "delete",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            "_csrf": token
          })
        }).then((res)=>{
          if(res.ok){
            window.location.href=`/courses/${courseId}/chapters`;
          }
        }).catch((error)=>{
          console.error(error);
        });
      }
    </script>
  </head>

  <body class="bg-gray-100 font-[Comic_Sans_MS] text-[1.2rem] px-24 py-16 min-h-screen leading-relaxed">
    
    <div class="text-base text-gray-600 mb-4">
      <a href="/" class="text-blue-600 underline hover:text-blue-800">Home</a> &gt; 
      <a href="/courses/<%= course.id %>/chapters" class="text-blue-600 underline hover:text-blue-800"><%= course.title %></a> &gt; <%= chapter.title %>
    </div>

    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold"><%= chapter.title %></h1>
      <% if(isAuthor) { %>
        <div class="space-x-6 text-blue-600 font-semibold text-lg">
          <a href="/courses/1/edit" class="hover:underline">Edit</a>
          <a href="#" onclick="deleteChapter(<%= chapter.id %>)" class="hover:underline">Delete</a>
        </div>
      <% } %>
    </div>

    <div>  
      <p class="mb-6"><%= chapter.description %></p>

      <h2 class="italic underline text-xl font-semibold mb-6">Pages</h2>

      <% if (pages.length === 0) { %>
        <p class="text-gray-700 mb-6">There are no pages available. Create one?</p>
      <% } else { %>
        <div class="space-y-3">
          <% pages.forEach((page) => { %>
            <a href = "/pages/<%= page.id %>" class="block">
              <div class="flex justify-between items-center border px-4 py-2 rounded shadow w-90 ">
                <span><%= page.title %></span>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>

      <% if(isAuthor) { %>
        <button class="px-6 py-3 bg-purple-600 text-white font-bold text-lg rounded mt-8">
          <a href="/chapters/<%= chapter.id %>/pages/new">Create a new page</a>
        </button>
      <% } %>
    </div>
  </body>
</html>